@model homework1.Models.Teacher

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4">Delete</h1>

<h3 class="mt-4">Are you sure you want to delete this?</h3>

<div class="mt-4">
    <h4>Teacher</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Teacher Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Teacher Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Teacher Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    @if (ViewData.ContainsKey("SubjectNames"))
    {
        <p>Please reassign the following subjects before deleting this teacher:</p>
        <ul>
            @foreach (var subjectName in (List<string>)ViewData["SubjectNames"])
            {
                <li>@subjectName</li>
            }
        </ul>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="TeacherId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>