@model homework1.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Details</h1>

    <div class="mt-4">
        <h4>Teacher</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Teacher Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Teacher Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Teacher Phone Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <h4>Subjects</h4>
        <hr />
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Subject Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in (IEnumerable<homework1.Models.Subject>)ViewData["Subjects"])
                {
                    <tr>
                        <td>@subject.Name</td>
                        <td>@subject.Code</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.TeacherId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>