@model homework1.ViewModels.ResultViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4">Delete</h1>

<h3 class="mt-4">Are you sure you want to delete this?</h3>

<div class="mt-4">
    <h4>Result</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Student Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class="col-sm-2">
            Student Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentEmail)
        </dd>
        <dt class="col-sm-2">
            Subject Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-2">
            Subject Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class="col-sm-2">
            Marks
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marks)
        </dd>
        <dt class="col-sm-2">
            Grade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ResultId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>