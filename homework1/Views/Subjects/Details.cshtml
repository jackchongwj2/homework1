@model homework1.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Details</h1>

    <div class="mt-4">
        <h4>Subject</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Subject Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubjectName)
            </dd>
            <dt class="col-sm-2">
                Subject Code
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubjectCode)
            </dd>
            <dt class="col-sm-2">
                Assigned Teacher
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeacherName)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.SubjectId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>