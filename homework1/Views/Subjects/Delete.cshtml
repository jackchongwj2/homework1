@model homework1.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4">Delete</h1>

<h3 class="mt-4">Are you sure you want to delete this?</h3>

<div class="mt-4">
    <h4>Subject</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Subject Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-2">
            Subject Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class="col-sm-2">
            Assigned Teacher
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeacherName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TeacherId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>